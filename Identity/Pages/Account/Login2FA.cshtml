@page
@model Identity.Pages.Account.Login2FAModel
@{
}

<h3>
    Lets see how much you have in the bank!!
</h3>
<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Login2FAViewModel.SecurityCode"></label>
        </div>
        <div class="col-5">
            <input type="text" asp-for="Login2FAViewModel.SecurityCode" class="form-control" />
            <span class="text-danger" asp-validation-for="Login2FAViewModel.SecurityCode"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Verify" />
        </div>
    </div>
</form>

