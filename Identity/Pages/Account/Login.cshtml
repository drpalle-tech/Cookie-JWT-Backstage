@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h3>Login</h3>
<br />
<div>
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="LoginViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="LoginViewModel.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="LoginViewModel.Email"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="LoginViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="LoginViewModel.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>
            </div>
        </div>
        <div class="mb-3 row form-check">
            <div class="col-2">
                <input asp-for="LoginViewModel.RememberMe" type="checkbox" class="form-check-input" />
                <label class="form-check-label" asp-for="LoginViewModel.RememberMe"></label>

            </div>
            <div class="col-5">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                <a class="btn btn-link" href="/Account/Signup">Noob, go signup!</a>
            </div>
        </div>
    </form>
</div>
