@model LoginInputModel
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    @* <link href="../login-bundle.css" rel="stylesheet" /> *@
</head>

<body>
    <script>
        const LOGIN_MODEL = @Html.Raw(Json.Serialize(Model));
    </script>

    <script src="../login-bundle.js?v=0"></script>
    <div>
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="UserName"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="UserName" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-5">
                    <input type="password" asp-for="Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="mb-3 row form-check">
                <div class="col-2">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" asp-for="RememberMe"></label>

                </div>
                <div class="col-5">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-2">
                    <input type="submit" class="btn btn-primary"value="Login" />
                </div>
                <div class="col-5">
                    <a class="btn btn-link" href="/Account/Register">Sign Up!</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>